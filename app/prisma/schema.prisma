generator client {
  provider = "prisma-client-py"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  email    String @unique
  username String @unique
  fullName String
  password String

  @@map("users")
}

model BlacklistedToken {
  id        String   @id @default(cuid())
  token     String   @unique
  createdAt DateTime @default(now())

  @@map("blacklisted_tokens")
}
